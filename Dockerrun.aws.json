{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    { 
      "name": "client", 
      "image": "kurabi/multi-client", 
      "hostname": "client",
      "essential": false
    },
    { 
      "name": "api", 
      "image": "kurabi/multi-api", 
      "hostname": "api",
      "essential": false
    },
    { 
      "name": "worker", 
      "image": "kurabi/multi-worker", 
      "essential": false
    },
    { 
      "name": "nginx", 
      "image": "kurabi/multi-nginx", 
      "essential": true,
      "portMappings": [ { "hostPort": 80, "containerPort": 80 } ],
      "links": ["client", "api"]
    }
  ]
}